<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/grey_temp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/half_black</item>
    </style>

    <style name="ColorDrawerTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="left_menu_tv">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="footer_tv">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <!--<item name="android:minHeight">@dimen/dimen_18dp</item>-->
        <!--<item name="android:maxHeight">@dimen/dimen_18dp</item>-->
    </style>

</resources>
