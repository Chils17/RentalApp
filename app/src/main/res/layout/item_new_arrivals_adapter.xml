<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_6dp"
        android:background="@drawable/list_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_iv_product"
                    android:layout_width="@dimen/height_70"
                    android:layout_height="@dimen/height_70"
                    android:adjustViewBounds="true"
                    android:src="@drawable/book" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_ll_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/height_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.webmyne.rentalapp.custom.TfTextView
                            android:id="@+id/item_fragment_my_shop_tv_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="3 states"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp14"
                            app:ftype="regular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center|left"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_height="wrap_content">

                            <com.webmyne.rentalapp.custom.TfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Author: "
                                android:textSize="@dimen/dimen_10dp"
                                android:textColor="@color/create_profile_text"
                                />
                            <com.webmyne.rentalapp.custom.TfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="chetan bhagat"
                                android:textSize="@dimen/dimen_10dp"
                                android:textColor="@color/black"
                                />


                        </LinearLayout>

                        <com.webmyne.rentalapp.custom.TfTextView
                            android:id="@+id/item_tv_product_rs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:text="150/- (INR)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_10dp"
                            app:ftype="regular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_height="wrap_content">

                            <com.webmyne.rentalapp.custom.TfTextView
                                android:layout_width="@dimen/height_50"
                                android:layout_height="@dimen/dimen_24dp"
                                android:background="@drawable/bg_btn_ligned_green"
                                android:text="Buy"
                                android:gravity="center"
                                android:textSize="@dimen/dimen_10dp"
                                android:textColor="@color/white"
                                />

                            <com.webmyne.rentalapp.custom.TfTextView
                                android:layout_width="@dimen/height_50"
                                android:layout_height="@dimen/dimen_24dp"
                                android:background="@drawable/bg_btn_ligned_blue"
                                android:text="Add to Q"
                                android:layout_marginLeft="@dimen/dimen_8dp"
                                android:gravity="center"
                                android:textSize="@dimen/dimen_10dp"
                                android:textColor="@color/white"
                                />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/height_5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star" />

                        <com.webmyne.rentalapp.custom.TfTextView
                            android:id="@+id/tfTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/height_5"
                            android:text="4.5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_12dp"
                            app:ftype="regular" />


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>