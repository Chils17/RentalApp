            android:drawableTop="@drawable/ic_foooter_shop"
            style="@style/footer_tv"
            android:text="@string/left_drawer_tv_shop"
            app:ftype="regular" />

        <com.webmyne.rentalapp.custom.TfTextView
            android:id="@+id/tv_footer_rent"
            style="@style/footer_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/ic_foooter_rent"
            android:text="@string/left_drawer_tv_rent"
            app:ftype="regular" />

        <com.webmyne.rentalapp.custom.TfTextView
            android:id="@+id/tv_footer_account"
            style="@style/footer_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
