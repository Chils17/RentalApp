<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/shadow_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/shadow_color"
        android:elevation="@dimen/dimen_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/height_2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_footer_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_footer_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_home" />

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/tv_footer_home"
                style="@style/footer_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/left_drawer_tv_home"
                app:ftype="regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:tint="@color/colorPrimary"
                android:id="@+id/iv_footer_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_shop" />

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/tv_footer_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/footer_tv"
                android:text="@string/left_drawer_tv_shop"
                app:ftype="regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer_rent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:tint="@color/colorPrimary"
                android:id="@+id/iv_footer_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_rent" />

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/tv_footer_rent"
                style="@style/footer_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/left_drawer_tv_rent"
                app:ftype="regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_footer_account"
                android:tint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_account" />

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/tv_footer_account"
                style="@style/footer_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/account"
                app:ftype="regular" />-->
        </LinearLayout>

        <!--        <com.webmyne.rentalapp.custom.TfTextView
            android:id="@+id/tv_footer_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTint="@color/colorPrimary"
            android:drawableTop="@drawable/ic_menu_home"
            android:text="@string/left_drawer_tv_home"
