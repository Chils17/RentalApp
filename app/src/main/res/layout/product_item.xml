<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dimen_4dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_4dp">

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/img_like"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="end"
                app:sparkbutton_activeImage="@drawable/ic_heart_on"
                app:sparkbutton_iconSize="@dimen/dimen_22dp"
                app:sparkbutton_inActiveImage="@drawable/ic_heart_off" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_128dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:padding="@dimen/dimen_2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgView"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.webmyne.rentalapp.custom.TfTextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16"
                        app:ftype="semibold" />

                    <com.webmyne.rentalapp.custom.TfTextView
                        android:id="@+id/textAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/author_name"
                        android:textColor="@color/half_black"
                        android:textSize="@dimen/sp14"
                        app:ftype="medium" />

                    <com.webmyne.rentalapp.custom.TfTextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="â‚¹7500"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp14"
                        app:ftype="medium" />

                    <RatingBar
                        android:id="@+id/txtRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/colorPrimary"
                        android:rating="4"
                        android:secondaryProgressTint="@android:color/transparent" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>