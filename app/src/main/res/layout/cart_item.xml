<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="@dimen/dimen_128dp"
        android:layout_height="@dimen/dimen_128dp"
        android:padding="@dimen/dimen_6dp"
        android:scaleType="fitXY"
        android:src="@drawable/image1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_4dp">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Killing Hemingway"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"
                    app:ftype="bold" />

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtBookCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:text="Age 1 to 5"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp14"
                    app:ftype="bold" />

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtBookPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:text="â‚¹ 1000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp14"
                    app:ftype="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:gravity="center|left"
                    android:orientation="vertical">
                    <com.webmyne.rentalapp.custom.TfTextView
                        android:layout_width="match_parent"
                        android:text="Qty"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        android:layout_height="wrap_content" />
                    <me.himanshusoni.quantityview.QuantityView
                        android:id="@+id/numQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        app:qv_addButtonTextColor="@color/colorGrey"
                        app:qv_quantity="10"
                        android:textSize="@dimen/sp14"
                        app:qv_removeButtonTextColor="@color/colorGrey" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>