<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="@dimen/dimen_128dp"
        android:layout_height="@dimen/dimen_128dp"
        android:padding="@dimen/dimen_6dp"
        android:scaleType="fitXY"
        android:src="@drawable/book1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Killing Hemingway"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16"
                app:ftype="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:orientation="vertical">

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtBookCate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age 1 to 5"
                android:textColor="@color/half_black"
                android:textSize="@dimen/sp14"
                app:ftype="bold" />

          <!--  <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtBookAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="@string/book_available"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp14"
                app:ftype="bold" />-->
        </LinearLayout>

        <com.webmyne.rentalapp.custom.TfTextView
            android:id="@+id/txtBookReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/returnBook"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp16"
            app:ftype="bold"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_gravity="end"/>

    </LinearLayout>

</LinearLayout>