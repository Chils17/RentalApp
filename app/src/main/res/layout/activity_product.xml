                                    android:background="@drawable/strike"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/dimen_2dp"
                                    android:text="₹ 10000"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/sp14"
                                    app:ftype="medium" />


