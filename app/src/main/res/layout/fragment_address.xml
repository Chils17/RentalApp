<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <com.webmyne.rentalapp.custom.TfTextView
            android:id="@+id/tv_label_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="Shipping Address :-"
            android:textColor="@color/half_black_checkout"
            android:textSize="@dimen/sp18"
            app:ftype="bold" />

        <EditText
            android:id="@+id/edt_address_shipping_billing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/textbox_group"
            android:inputType="textMultiLine"
            android:gravity="center|top|start"
            android:imeOptions="actionDone"
            android:hint="@string/hint_enter_shipping_address"
            android:maxLength="500"
            android:maxLines="@integer/max3"
            android:padding="5dp"
            android:textSize="@dimen/sp16"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

    </LinearLayout>


</LinearLayout>
