<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="@dimen/dimen_96dp"
                    android:layout_height="@dimen/dimen_96dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_14dp" />

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:text="husen"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtMembership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/member_ship"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16"
                app:ftype="semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_.5dp"
                android:background="@color/half_black" />

            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtWishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/wish_list"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16"
                app:ftype="semibold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_.5dp"
                android:background="@color/half_black" />


            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/personal_information"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16"
                app:ftype="semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_.5dp"
                android:background="@color/half_black" />


            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtReferfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/refer_friend"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16"
                app:ftype="semibold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_.5dp"
                android:background="@color/half_black" />


            <com.webmyne.rentalapp.custom.TfTextView
                android:id="@+id/txtOrderhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/order_history"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp16"
                app:ftype="semibold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
