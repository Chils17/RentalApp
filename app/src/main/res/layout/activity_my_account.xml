<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webmyne.rentalapp.ui.MyAccountActivity">

    <include layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="@dimen/dimen_96dp"
                    android:layout_height="@dimen/dimen_96dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_14dp" />

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:text="husen"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:orientation="vertical">


                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtMembership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/membership"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/half_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="vertical">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtWishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wish_list"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/half_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="vertical">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtPersonalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_information"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/half_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="vertical">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtReferfriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/refer_friend"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@color/half_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:orientation="vertical">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:id="@+id/txtOrderhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_history"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
