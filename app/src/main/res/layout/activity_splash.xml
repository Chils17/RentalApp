<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.webmyne.rentalapp.ui.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_image"
        android:scaleType="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:background="@drawable/auth_background"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dimen_72dp"
                android:layout_height="@dimen/dimen_72dp"
                android:src="@drawable/ic_book" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.webmyne.rentalapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp36" />

                <com.webmyne.rentalapp.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rental"
                    android:textColor="#2196f3"
                    android:textSize="@dimen/sp36" />

            </LinearLayout>

            <com.webmyne.rentalapp.custom.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Better Books, Better Future"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
